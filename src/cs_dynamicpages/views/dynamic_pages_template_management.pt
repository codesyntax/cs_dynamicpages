<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="cs_dynamicpages"
>
  <body>

    <metal:custom_title fill-slot="content-title">
      <h1 class="documentFirstHeading"
          i18n:translate=""
      >
      Dynamic Pages Templates management
      </h1>
    </metal:custom_title>

    <metal:custom_description fill-slot="content-description">

    </metal:custom_description>

    <metal:content-core fill-slot="content-core">
      <metal:block define-macro="content-core">



        <ul class="list-group">
          <li class="list-group-item d-flex justify-content-between align-items-start"
              tal:repeat="template view/available_templates"
          >
            <ul>
              <li><span i18n:translate="">Name</span>: ${template/name}</li>
              <li><span i18n:translate="">Content title</span>: ${template/Title} (${template/translated_portal_type})</li>
              <li><a href="${template/absolute_url}"
                   i18n:translate=""
                >See template</a></li>
            </ul>

            <a class="btn btn-sm btn-danger btn-delete-element"
               href="#"
               title="Delete"
               data-bs-target="#deleteElementModal-${repeat/template/number}"
               data-bs-toggle="modal"
               i18n:attributes="title"
            ><tal:icon tal:replace="structure python:icons.tag('trash')" /></a>
            <div class="modal fade"
                 id="deleteElementModal-${repeat/template/number}"
                 aria-hidden="true"
                 aria-labelledby="deleteElementModalLabel-${repeat/template/number}"
                 tabindex="-1"
            >
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title"
                        id="deleteElementModalLabel-${repeat/template/number}"
                        i18n:translate=""
                    >Confirm Deletion</h5>
                    <button class="btn-close"
                            aria-label="Close"
                            type="button"
                            data-bs-dismiss="modal"
                            i18n:attributes="aria-label"
                    ></button>
                  </div>
                  <div class="modal-body">
                    <p i18n:translate="">Are you sure you want to delete this item? This action cannot be undone.</p>
                  </div>
                  <div class="modal-footer">
                    <button class="btn btn-secondary"
                            type="button"
                            data-bs-dismiss="modal"
                            i18n:translate=""
                    >Cancel</button>
                    <button class="btn btn-danger confirmDeleteElement"
                            type="button"
                            data-uid="${template/uid}"
                            i18n:translate=""
                    >Delete</button>
                  </div>
                </div>
              </div>
            </div>

          </li>

        </ul>



      </metal:block>
    </metal:content-core>
  </body>
</html>
